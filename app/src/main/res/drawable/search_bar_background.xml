<?xml version="1.0" encoding="utf-8"?>
<shape xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Set the background color of the search bar -->
    <solid android:color="#FFFFFF" /> <!-- Light gray background -->

    <!-- Set the corner radius for rounded corners -->
    <corners android:radius="16dp" />

    <!-- Optional: Add padding inside the shape -->
    <padding
        android:left="8dp"
        android:top="8dp"
        android:right="8dp"
        android:bottom="8dp" />

    <!-- Optional: Add a border -->
    <stroke
        android:width="1dp"
        android:color="#DADADA" /> <!-- Light gray border -->
</shape>
