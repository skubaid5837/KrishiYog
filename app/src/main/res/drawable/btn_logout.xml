<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <!-- Pressed State -->
    <item android:state_pressed="true">
        <shape android:shape="rectangle">
            <solid android:color="#E6F7E6" /> <!-- Light green background when pressed -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
        </shape>
    </item>

    <!-- Default State -->
    <item>
        <shape android:shape="rectangle">
            <solid android:color="#F7FFF7" /> <!-- Light white-green background -->
            <corners android:radius="12dp" /> <!-- Rounded corners -->
            <stroke
                android:width="1dp"
                android:color="#00C853" /> <!-- Green border -->
        </shape>
    </item>
</selector>
